[sqlfluff]
dialect = mysql
templater = jinja
max_line_length = 100

[sqlfluff:rules]
allow_scalar = True

[sqlfluff:layout]
comma_style = trailing

[sqlfluff:indentation]
tab_space_size = 2
indent_unit = space

[sqlfluff:rules:L010]  # Keywords
capitalisation_policy = upper

[sqlfluff:rules:L014]  # Unquoted identifiers
capitalisation_policy = lower